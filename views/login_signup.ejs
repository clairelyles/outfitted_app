<% include partials/login_signup_header %>

<!-- Header -->
<div class='content-wrapper text-center '>
  <div class='container text-center'>
    <h1><strong>OutFitted</strong></h1>
    <p>Your virtual closet for creating mood-outfit combinations using the clothes from your wardrobe.</p>
    <!-- Alerts -->
    <% include partials/alerts %>
  </div>
</div>

<!-- Sign Up and Login Forms -->
<div class='signup-login text-center'>
  <div class='col-xs-6 col-md-4 col-md-offset-2'>
    <h2>SIGN UP</h2>
      <form class='form-signup' method='post' action='/signup' enctype='multipart/form-data'>
        <input type='text' class='form-control' placeholder='Enter your email' name='email'>
        <input type='text' class='form-control' placeholder='Enter your first name' name='first_name'>
        <input type='password' class='form-control' placeholder='Enter your password' name='password'>
        <input type='password' class='form-control' placeholder='Re-enter your password' name='password2'>
        <input type='submit' value='Sign up' class='btn btn-primary btn-md'>
      </form>
  </div>
  <div class='col-xs-6 col-md-4'>
    <h2>LOG IN</h2>
      <form class='form-login' method='post' action='/login' enctype='multipart/form-data'>
        <input type='text' class='form-control' placeholder='Enter your email' name='email' value=''>
        <input type='password' class='form-control' placeholder='Enter your password' name='password' value=''>
        <input type='submit' value='Log in' class='btn btn-primary btn-md'>
      </form>
  </div>
</div>

<% include partials/login_signup_footer %>